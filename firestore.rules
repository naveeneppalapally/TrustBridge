rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth != null;
    }

    function isParent(parentId) {
      return isAuthenticated() && request.auth.uid == parentId;
    }

    match /parents/{parentId} {
      allow create: if isParent(parentId) &&
        request.resource.data.parentId == request.auth.uid;
      allow read, update, delete: if isParent(parentId);

      // Parent-owned subcollections (access requests, preferences logs, etc.).
      match /{document=**} {
        allow read, write: if isParent(parentId);
      }
    }

    match /children/{childId} {
      allow create: if isAuthenticated() &&
        request.resource.data.parentId == request.auth.uid;
      allow read, update, delete: if isAuthenticated() &&
        resource.data.parentId == request.auth.uid;
    }

    // Queue documents written by parent app and consumed by Cloud Functions.
    match /notification_queue/{queueId} {
      allow create: if isAuthenticated() &&
        request.resource.data.parentId == request.auth.uid &&
        request.resource.data.processed == false &&
        request.resource.data.route is string &&
        request.resource.data.title is string &&
        request.resource.data.body is string;

      allow read: if isAuthenticated() &&
        resource.data.parentId == request.auth.uid;

      allow update, delete: if false;
    }
  }
}
