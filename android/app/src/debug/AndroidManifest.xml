<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The INTERNET permission is required for development. Specifically,
         the Flutter tool needs it to communicate with the running application
         to allow setting breakpoints, to provide hot reload, etc.
    -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:usesCleartextTraffic="true">
        <receiver
            android:name=".vpn.DebugVpnCommandReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.navee.trustbridge.debug.START_VPN" />
                <action android:name="com.navee.trustbridge.debug.STOP_VPN" />
                <action android:name="com.navee.trustbridge.debug.STATUS_VPN" />
            </intent-filter>
        </receiver>
    </application>
</manifest>
